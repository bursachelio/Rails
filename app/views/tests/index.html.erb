<h1>Список тестов</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Actions</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td>
        <%= link_to 'Редактировать', edit_test_path(test) %>
        <%= link_to 'Удалить', test, method: :delete, data: { confirm: 'Вы уверены?' } %>
        <%= link_to 'Просмотреть', test_path(test) %>
      </td>
    </tr>
  <% end %>
</table>

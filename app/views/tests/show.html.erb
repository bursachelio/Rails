
<h1>Тест: <%= @test.title %></h1>
<p>Описание теста: <%= @test.description %></p>

<h2>Список вопросов:</h2>
<%= render @questions %>

<%= link_to 'Добавить вопрос', new_test_question_path(@test) %>

<p>
  <%= link_to 'Редактировать тест', edit_test_path(@test) %>
  <%= link_to 'Удалить тест', @test, method: :delete, data: { confirm: 'Вы уверены?' } %>
</p>
